# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# APIs in EmployeeController
GET     /moto                  controllers.MotoController.listMotos()
GET     /moto/:id              controllers.MotoController.retrieve(id:Int)
POST    /moto                  controllers.MotoController.create(request:Request)
#PATCH   /moto/:id             controllers.MotoController.update(request:Request, id:Int)
DELETE  /moto/:id              controllers.MotoController.delete(id:Int)
GET     /ruta                  controllers.RutaController.listRutas()
GET     /ruta/:id              controllers.RutaController.retrieve(id:Int)
POST    /ruta                  controllers.RutaController.create(request:Request)
#PATCH   /ruta/:id             controllers.RutaController.update(request:Request, id:Int)
DELETE  /ruta/:id              controllers.RutaController.delete(id:Int)
GET     /usuario               controllers.UsuarioController.listUsuarios()
GET     /usuario/:id           controllers.UsuarioController.retrieve(id:Int)
POST    /usuario               controllers.UsuarioController.create(request:Request)
#PATCH   /usuario/:id          controllers.UsuarioController.update(request:Request, id:Int)
DELETE  /usuario/:id           controllers.UsuarioController.delete(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

