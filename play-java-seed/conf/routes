# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /motos                 controllers.MotoController.listMotos()
GET     /moto/:id              controllers.MotoController.retrieve(id:Int)
POST    /motos                  controllers.MotoController.create(request:Request)
#PATCH   /moto/:id             controllers.MotoController.update(request:Request, id:Int)
DELETE  /moto/:id              controllers.MotoController.delete(id:Int)
GET     /rutas                 controllers.RutaController.listRutas()
GET     /ruta/:id              controllers.RutaController.retrieve(id:Int)
#GET     /ruta/:id/valoraciones              controllers.RutaController.retrieve(id:Int)
POST    /rutas                  controllers.RutaController.create(request:Request)
#PATCH   /ruta/:id             controllers.RutaController.update(request:Request, id:Int)
DELETE  /ruta/:id              controllers.RutaController.delete(id:Int)
GET     /usuarios              controllers.UsuarioController.listUsuarios()
GET     /usuario/:id               controllers.UsuarioController.retrieve(id:Int)
#GET     /usuario/:id/invitaciones/:idi          controllers.UsuarioController.retrieve1(id:Int,idi:int)
POST    /usuarios               controllers.UsuarioController.create(request:Request)
#PATCH   /usuario/:id          controllers.UsuarioController.update(request:Request, id:Int)
DELETE  /usuario/:id           controllers.UsuarioController.delete(id:Int)
